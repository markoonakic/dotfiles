# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

export LANG="en_US.UTF-8"

export EDITOR="nvim"

ZSH_THEME=""

plugins=(kubectl zsh-autocomplete zsh-syntax-highlighting zsh-autosuggestions sudo)

source $ZSH/oh-my-zsh.sh

bindkey -v
export KEYTIMEOUT=1

#Aliases

alias cl="clear"
alias cdl="cd && cl"

if command -v bat > /dev/null ; then
  alias cat="bat"
fi

if command -v lsd > /dev/null ; then
  alias ls="lsd"
  alias ll="ls -lgh"
  alias la='ls -lathr'
  alias lla='ls -lgha'
  alias lt='ls --tree'
fi

alias v="nvim"
alias vim="nvim"

alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gpl="git pull"

alias py="python3"

if command -v mise > /dev/null ; then
  eval "$($HOME/.local/bin/mise activate zsh)"
fi

if command -v fzf > /dev/null ; then
  source <(fzf --zsh)
fi

if command -v zi > /dev/null ; then
	eval "$(zoxide init zsh)"
fi

if command -v starship > /dev/null ; then
	eval "$(starship init zsh)"
fi
